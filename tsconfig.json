{
  "compilerOptions": {
    /* File Layout */
    "rootDir": "./src",
    "outDir": "./dist",

    /* Environment Settings */
    "target": "ES2020",       // modern JS output
    "module": "CommonJS",     // use CommonJS for Node.js
    "esModuleInterop": true,  // allows default imports from CJS modules
    "resolveJsonModule": true,

    /* Type Checking */
    "strict": true,
    "skipLibCheck": true
  }
}
